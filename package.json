  "description": "Random job scheduler for AI agents - making autonomous agents feel natural, not robotic",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "cronx": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
