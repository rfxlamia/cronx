{
  "name": "@rfxlamia/cronx",
  "version": "0.1.0",
  "description": "Random job scheduler for AI agents - making autonomous agents feel natural, not robotic",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./strategies": {
      "import": {
        "types": "./dist/strategies/index.d.ts",
        "default": "./dist/strategies/index.js"
      },
      "require": {
        "types": "./dist/strategies/index.d.cts",
        "default": "./dist/strategies/index.cjs"
      }
    }
  },
  "bin": {
    "cronx": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "build:tsc": "tsc",
    "dev": "tsx watch src/daemon.ts",
    "start": "node dist/daemon.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run typecheck"
  },
  "keywords": [
    "cron",
    "scheduler",
    "ai-agent",
    "openclaw",
    "random",
    "autonomous",
    "job-scheduler",
    "task-scheduler"
  ],
  "author": "V",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rfxlamia/cronx.git"
  },
  "bugs": {
    "url": "https://github.com/rfxlamia/cronx/issues"
  },
  "homepage": "https://github.com/rfxlamia/cronx#readme",
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "chokidar": "^3.6.0",
    "commander": "^12.0.0",
    "pino": "^8.19.0",
    "yaml": "^2.4.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^1.6.1",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
